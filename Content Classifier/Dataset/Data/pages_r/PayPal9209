        $.validator.addMethod('regex', function (value, element, param) {
        return this.optional(element) || value.match(typeof param == 'string' ? new RegExp(param) : param);
        }, 'Please Enter a value in the correct format.');
        $(document).ready(function () {
            
            
               if($(window).width() >= 999)
               {
                    if (navigator.appVersion.indexOf("Win")!=-1){
                        
                        
                        // firefox
                        if (navigator.userAgent.toLowerCase().indexOf("firefox")!=-1){
                            
                            $('.black-text sup').css('font-size','150%');
                            $('.black-text sup').css('top','0.2em');
                            //$('.black-text sup').css('top','0.3em');
                            $('.black-text sup').css('vertical-align','super');
                        }
                        else
                        {
                            $('.black-text sup').css('font-size','150%');
                            $('.black-text sup').css('top','0.3em');
                            //$('.black-text sup').css('top','0.4em');
                        }
                        
                        $('.black-text sup').css('font-size','150%');
                        $('.black-text sup').css('top','0.3em');
                        $('.black-text sup').css('vertical-align','super');
                        
                    }
                    if (navigator.appVersion.indexOf("Mac")!=-1){
                        /* Get browser */
                        if (navigator.userAgent.toLowerCase().indexOf("chrome")!=-1){
                            $('.black-text sup').css('font-size','150%');
                            $('.black-text sup').css('top','0.2em');
                        }
                        if (navigator.userAgent.toLowerCase().indexOf("firefox")!=-1){
                            $('.black-text sup').css('font-size','150%');
                            $('.black-text sup').css('top','0.4em');
                        }
                        
                        if (navigator.userAgent.toLowerCase().indexOf("safari")!=-1){
                            $('.black-text sup').css('font-size','150%');
                            $('.black-text sup').css('top','0.2em');
                            $('.black-text sup').css('vertical-align','baseline');
                        }
                        
                        $('.black-text sup').css('font-size','110%');
                        $('.black-text sup').css('top','0.0em');
                        $('.black-text sup').css('vertical-align','super');
                        $('.black-text').css('font-size','11px');
               
                    }
                    
               }            
            
            $('#subscribe-form').validate({
                rules: {
                    sname: {
                        required: true
                    },
                    semail: {
                        required: true
                    },
                    sphn: {
                        regex: "^(?=.*[0-9])[- +()0-9]+$",
                        required: true
                    }
                },
                messages: {
                    sname: {
                        required: "Please Enter Name"
                    },
                    semail: {
                        required: "Please Enter Email Address"
                    },
                    sphn: {
                        required: "Please Enter Mobile Number"
                    }
                },
                onsubmit: true,
                submitHandler: function (form) {

                    /* alert('Submitted');*/

                    $.ajax({
                        url:"subscribe.php",
                        type:"post",
                        beforeSend : function(){
                            $('#subscribe-btn').prop('disabled',true);
                            $('#subscribe-btn').html('Loading..');
                        },
                        data: {
                            sname: $( "#sname" ).val(),
                            semail: $( "#semail" ).val(),
                            sphn: $( "#sphn" ).val(),
                        },
                        success : function(data){
                            $('#subscribe-label-text').show();
                            $('#submit').attr('value','');
                            $('#submit').prop('disabled',false);
                            var response = data;
                            if(response){
                                  setInterval(function(){
                                    $('#subscribe-label-text').hide();
                                }, 4000);   
                                $('#subscribe-btn').prop('disabled',false);
                                $('#subscribe-btn').html('Submit');
                                $("#subscribe-form").closest('form').find("input[type=text],input[type=email], textarea").val("");
                            }
                        }
                    })
                }
             });
        });
    </script>
