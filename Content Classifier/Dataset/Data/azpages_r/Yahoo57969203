$(function() {
    //ページトップへ
    var topBtn = $('#js-back-top');
    topBtn.hide();
    //スクロールが100に達したらボタン表示
    $(window).scroll(function() {
        if ($(this).scrollTop() > 50) {
            topBtn.fadeIn();
        } else {
            topBtn.fadeOut();
        }
    });
    topBtn.click(function() {
        $('html,body').animate({
            scrollTop: 0
        }, 'fast');
        return false;
    });
});
</script>
