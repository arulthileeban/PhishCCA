	<script type="text/javascript" charset="utf-8">
	    $(document).ready(function(){
            $.getJSON('projects.json', function(data) {
	    
            // format all projects
            $(data).each(function (index, element) {
            var text_more = element['raw_link'];
            if ( element['featured'] != 1 )
            return;
            text_more = element['raw_link'];
            if ( text_more == undefined )
            text_more = '';
            var html = [
            '<div class="caption"><h3>', element['title'], '</h3>',
                '<p>', element['description'].join(''), '</p>',
                text_more,
                '</div>',
            <!-- '<a href="', element['media'], '" rel="prettyPhoto[featured]">', -->
                '<img src="https://lelectrum.com/slides/',&#32;element['id'],&#32;'.png" alt="', element['title'], '"/>'
            <!-- '</a>' -->
            ].join('');
            var item = $('<div></div>').html(html);
            $('#slides').append(item);
            });

            $("a[rel^='panelg']").click(selectNav);

            $("a[rel^='prettyPhoto']").prettyPhoto({
            overlay_gallery: false,
            deeplinking: false
            });

            $(".slideshow").cycle({
            timeout: 8000,
            speed: 1000
            });

            });
	    });
	</script>

