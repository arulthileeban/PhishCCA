                if (typeof(dataLayer) !== 'undefined'){
                    if (typeof(dataLayer[0]) !== 'object') {
                        dataLayer[0] = {}
                    }
                    dataLayer[0].user = RESPONSIVE.constant.user;
                } else {
                    var dataLayer = [{
                        'user': RESPONSIVE.constant.user
                    }];
                }
            } else if (typeof(GUSER) !== 'undefined') {
                if (typeof(dataLayer) !== 'undefined'){
                    if (typeof(dataLayer[0]) !== 'object') {
                        dataLayer[0] = {}
                    }
                    dataLayer[0].user = GUSER;
                } else {
                    var dataLayer = [{
                        'user': GUSER
                    }];
