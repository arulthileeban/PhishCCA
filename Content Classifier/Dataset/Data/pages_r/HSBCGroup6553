<script>
    var title = '恒生．傳心';

    var url = 'https://hangsengecard.com/index.php?cardname=6aaW6aG1&type=open&language=57mB5L2T';
    var imgUrl = "https://hangsengecard.com/img/share/logo_icon.png";
    //var imgUrl = 'https://game.xtechnology.com.cn/game511/telun/img/share/logo_icon.png';
    var desc = '恒生定制賀卡，將心中祝福，化作溫馨文字，傳遞給您欽佩的親朋摯友。';  

    wx.config({
        debug: false,
        appId: 'wxccbbb38fe01ca586',
        timestamp: '1607914809',
        nonceStr: 'Om6aD4gpFcd7nIRt',
        signature: 'c08e0bc02cc6f1a1ede3e2ce4f7c266032ebf6fe',
        jsApiList: [
            'checkJsApi',
            'onMenuShareTimeline',
            'onMenuShareAppMessage',
            'onMenuShareQQ',
            'onMenuShareWeibo'
        ]
    });



    function logShare(target)
    {
        $.get( "stat.php?target="+target+"&cardname=首页&language=繁体");
    }


    wx.ready(function() {
        wx.checkJsApi({
            jsApiList: [
                'onMenuShareTimeline',
                'onMenuShareAppMessage',
                'onMenuShareQQ',
                'onMenuShareWeibo'
            ]
        });
      //分享到朋友圈后只能看到title 看不到desc
        wx.onMenuShareTimeline({
            title: desc,
            link: url,
            desc: desc,
            imgUrl: imgUrl,
            trigger: function (res) {},
            success: function () {logShare("wechat_timeline");},    //logShare("wechat_timeline");
            cancel: function (res) {},
            fail: function (res) {}
        });

        wx.onMenuShareAppMessage({
            title: title,
            desc: desc,
            link: url,
            imgUrl: imgUrl,
            type: 'link',
            dataUrl: '',
            success: function () {logShare("wechat_friend");}   //logShare("wechat_friend");
        });

        wx.onMenuShareQQ({
            title: title,
            desc: desc,
            link: url,
            imgUrl: imgUrl,
            success: function () {logShare("qq");}  //logShare("qq");
        }); 

        wx.onMenuShareWeibo({
            title: title,
            desc: desc,
            link: url,
            imgUrl: imgUrl,
            success: function () {logShare("weibo");}  //logShare("weibo");
        });

        wx.showOptionMenu();
    });

    wx.error(function(res){
        console.log('wx.error: '+JSON.stringify(res));
    });
</script>
